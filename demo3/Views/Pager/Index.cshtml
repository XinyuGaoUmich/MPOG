                        <dt>
                            NQS Domain
                        </dt>
                        <dd>
                            @if (hasPublishedVersion && Model.pager_Results.First().NQS_Domain_ID != null) {
                                @Model.nQS_Domain.Where(o => o.NQS_Domain_ID == Model.pager_Results.First().NQS_Domain_ID).First().NQS_Domain_Name
